<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="#0583EA"
        android:drawableLeft="@drawable/back"
        android:textSize="20dp"
        android:padding="20sp"
        android:drawablePadding="25dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/black"
        android:layout_below="@+id/login"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        />

    <View
        android:id="@+id/email_line"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#C4C4C4"
        android:layout_below="@+id/email"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/black"
        android:layout_below="@+id/email_line"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:textSize="20dp"
        />

    <View
        android:id="@+id/password_line"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#C4C4C4"
        android:layout_below="@+id/password"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USE PHONE NUMBER"
        android:textColor="#0583EA"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/password_line"/>

    <Button
        android:id="@+id/login1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="#858992"
        android:layout_below="@+id/number"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password ?"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/login1"
        android:textColor="#858992"
        />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textSize="20dp"
        android:layout_below="@+id/forgotPassword"
        android:textColor="#000000"
        android:layout_marginBottom="35dp"
        />

    <Button
        android:id="@+id/facebookBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="CONTINUE WITH FACEBOOK"
        android:background="#3B5998"
        android:drawableLeft="@drawable/facebook"
        android:layout_below="@+id/or"
        android:textSize="17dp"
        android:padding="10sp"
        android:drawablePadding="30dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="20dp"
        />

    <Button
        android:id="@+id/googleBtn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="CONTINUE WITH GOOGLE"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/google"
        android:layout_below="@+id/facebookBtn"
        android:textSize="17dp"
        android:padding="10sp"
        android:drawablePadding="30dp"
        android:layout_marginTop="15dp"
        android:textColor="#373737"
        android:layout_marginLeft="20dp"
        />

</RelativeLayout>