<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#079527">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="19dp"
            android:layout_height="16dp"
            android:background="@drawable/back"
            android:layout_marginTop="15dp"
            />
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:id="@+id/search"
            android:background="@drawable/search"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"/>
        <ImageView
            android:id="@+id/play"
            android:layout_below="@+id/backArrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/play"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_marginTop="150dp">
    <ImageView
        android:id="@+id/green_square"
        android:layout_width="95dp"
        android:layout_height="86dp"
        android:background="@drawable/square_green"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        />

        <View
            android:id="@+id/green_square_line1"
            android:layout_width="119dp"
            android:layout_height="18dp"
            android:background="#C4C4C4"
            android:layout_marginLeft="147dp"
            android:layout_marginTop="40dp"
            />
        <View
            android:id="@+id/green_square_line2"
            android:layout_width="89dp"
            android:layout_height="15dp"
            android:background="#C4C4C4"
            android:layout_below="@+id/green_square_line1"
            android:layout_marginLeft="147dp"
            android:layout_marginTop="10dp"
            />
        <View
            android:id="@+id/green_square_line3"
            android:layout_width="45dp"
            android:layout_height="11dp"
            android:background="#C4C4C4"
            android:layout_below="@+id/green_square_line2"
            android:layout_marginLeft="147dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:id="@+id/bookmark"
            android:background="@drawable/bookmark"
            android:layout_marginTop="28dp"
            android:outlineAmbientShadowColor="#079527"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <Button
            android:id="@+id/try_box"
            android:layout_width="157dp"
            android:layout_height="29dp"
            android:text="TRY NOW"
            android:textColor="#079527"
            android:background="@drawable/try_rectangle"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/green_square"
            android:layout_marginTop="50dp"
            />

        <Button
            android:id="@+id/install_box"
            android:layout_width="146dp"
            android:layout_height="29dp"
            android:text="INSTALL"
            android:layout_below="@+id/green_square"
            android:background="@drawable/install_rectangle"
            android:layout_marginTop="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:id="@+id/circle_1"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_below="@+id/try_box"
            android:background="@drawable/circle_green"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="60dp"
            />

        <ImageView
            android:id="@+id/circle_2"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_below="@+id/try_box"
            android:background="@drawable/circle_green"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="60dp"
            android:layout_marginRight="60dp"
            />
        <ImageView
            android:id="@+id/circle_3"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_below="@+id/try_box"
            android:background="@drawable/circle_green"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_marginRight="60dp"
            />
        <View
            android:id="@+id/bottom_box1"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_below="@id/circle_1"
            android:background="#C4C4C4"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            />

        <View
            android:id="@+id/bottom_box2"
            android:layout_width="240dp"
            android:layout_height="24dp"
            android:layout_below="@id/bottom_box1"
            android:background="#C4C4C4"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            />

    </RelativeLayout>

</RelativeLayout>